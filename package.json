{
  "name": "pogosdex",
  "version": "1.0.0",
  "description": "PoGoSDex - PogoSDex-like design (Railway-ready). Deploy using Docker on Railway.",
  "private": true,
  "workspaces": [
    "server"
  ],
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev:css": "npx --yes @tailwindcss/cli -i ./public/styles.css -o ./public/output.css --watch",
    "build:css": "npx --yes @tailwindcss/cli -i ./public/styles.css -o ./public/output.css --minify",
    "dev:admin": "npx --yes @tailwindcss/cli -i ./server/admin/styles.css -o ./server/admin/admin.css --watch",
    "build:admin": "npx --yes @tailwindcss/cli -i ./server/admin/styles.css -o ./server/admin/admin.css --minify",
    "start": "node server/server.js",
    "bump:assets": "node scripts/bump-asset-version.mjs",
    "lint": "eslint . --ext .js,.mjs,.cjs",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs --fix",
    "test": "node --experimental-vm-modules ./node_modules/jest/bin/jest.js --runInBand --passWithNoTests",
    "remove:comments": "node scripts/remove-comments.cjs --backup --pattern=**/*.{js,jsx,ts,tsx,mjs,cjs,css,scss,html,htm}",
    "prepare": "node -e \"if (process.env.HUSKY !== '0') { try { require('husky').install(); } catch(e) {} }\""
  },
  "devDependencies": {
    "vite": "^7.2.7",
    "@tailwindcss/cli": "^4.1.18",
    "eslint": "^9.39.2",
    "fast-glob": "^3.3.3",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "strip-comments": "^2.0.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4.1.16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weIlThought/PoGoSDex.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/weIlThought/PoGoSDex/issues"
  },
  "homepage": "https://github.com/weIlThought/PoGoSDex#readme",
  "dependencies": {
    "@tailwindcss/forms": "^0.5.11",
    "@tailwindcss/typography": "^0.5.19",
    "axios": "^1.13.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",

    "steno": "^4.0.2"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": [
        "warn",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ]
    }
  }
}
