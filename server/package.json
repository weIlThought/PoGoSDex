    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^7.4.0",
    "helmet": "^8.1.0",
    "lowdb": "^5.1.0",
    "morgan": "^1.10.0",
    "node-fetch": "^3.3.2",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "tailwindcss": "^3.4.18"
  }
}
