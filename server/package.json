{
  "name": "pokemon-go-compatibility-backend",
  "version": "2.2.0",
  "description": "Backend for PG Compatibility (Railway-ready)",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/server.js",
    "dev": "nodemon server/server.js",
    "hash:pw": "node -e \"const bcrypt=require('bcrypt');const pw=process.argv[1];if(!pw){console.log('Usage: npm run hash:pw -- yourpassword');process.exit(1);}bcrypt.hash(pw,12).then(h=>console.log(h));\" --"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.21.0",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.1",
    "helmet": "^8.1.0",
    "lowdb": "^3.0.0",
    "nanoid": "^4.0.2",
    "xss-clean": "^0.1.4",
    "express-validator": "^7.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  }
}